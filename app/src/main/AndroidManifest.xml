<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.finalproject"
    android:versionCode="1"
    android:versionName="1.0"
    >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ball"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasketBallActivity"
            android:label="BasketBall"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MenuActivity"
            android:label="Menu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DrawLineActivity"
            android:label="Draw"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TweenAnimationActivity"
            android:label="Tween"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ManagementActivity"
            android:label="Management"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WebViewActivity"
            android:label="WebView"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
